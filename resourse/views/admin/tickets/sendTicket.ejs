<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center p-2 border-bottom">
    <h1 class="h2">ارسال تیکت به آموزشگاه ها</h1>
    <div class="col-sm-6">
        <ol class="breadcrumb bg-transparent float-sm-left">
            <li class="breadcrumb-item"><a href="/admin/">داشبورد</a></li>
            <li class="breadcrumb-item"><a href="/admin/ticket/send/list">تیکت ها</a></li>
            <li class="breadcrumb-item active">ارسال تیکت</li>
        </ol>
    </div>
</div>
<div class="p-4 ">
    <div class="col bg-white shadow-lg p-3">
        <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom row form-group">
            <h2 class="col">ارسال تیکت </h2>
        </div>

        <form action="/admin/ticket/send" method="post">
            <div class="form-group row">
                <div class="col">
                    <label for="title" class="control-label font-weight-bold"> عنوان تیکت</label>
                    <input type="text" name="title" id="title" class="form-control">
                    <div class="text-danger font-weight-bolder">
                        <%if(messages.title){%>
                        <strong><%-messages.title%></strong>
                        <%}%>
                    </div>
                </div>
                <div class="col">
                    <label for="name" class="control-label font-weight-bold">گیرنده تیکت</label>
                    <select class="form-control" id="school" name="school">
                        <option selected value="" >یک گیرنده را انتخاب کنید ...</option>
                        <%schools.forEach(school => {%>
                            <option value="<%=school._id%>"><%=school.name%></option>
                        <%})%>
                    </select>
                    <div class="text-danger font-weight-bolder">
                        <%if(messages.school){%>
                        <strong><%-messages.school%></strong>
                        <%}%>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="row w-100 text-right bg-light p-2 border m-2">
                    <h4>متن تیکت : </h4>
                    <textarea class="form-control" rows="6" name="body" id="body" placeholder="متن تیکت "></textarea>
                    <div class="text-danger font-weight-bolder">
                        <%if(messages.body){%>
                        <strong><%-messages.body%></strong>
                        <%}%>
                    </div>
                </div>
                <button class="btn btn-info" type="submit">ارسال تیکت</button>
            </div>
        </form>


    </div>
</div>
<%- include(viewPath("layouts/messagesAdmin"), {messages})%>