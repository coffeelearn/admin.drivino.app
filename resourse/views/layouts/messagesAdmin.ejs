<%if(messages.errorModal){%>
<div dir="rtl" class="modal fade mt-5" id="alertModal" tabindex="-1" aria-labelledby="modalAlertTitle"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header ">
        <h5 class="modal-title" id="modalAlertTitle">پیغام سیستمی</h5>
        <button type="button" class="close btnClosemodal" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="bodyAlert"><%-messages.errorModal%></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info okAlert text-white" data-dismiss="modal">باشه</button>
      </div>
    </div>
  </div>
</div>
<%}%>
